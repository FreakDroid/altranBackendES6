{{! Import the contents of header.html from partials}}
{{> navigation}}

<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
             <div class="form-group row">
                <div class="col-10">
                    <div class="alert alert-danger">
                        <span id="errorDiv">{{error}}</span>
                    </div>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-10">
                    <a href="/userSearcher" class="btn btn-default">Go Searcher</a>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    {{else}}
        {{#if user}}
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group row">
                    <div class="col-10">
                        <h1>User result</h1>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="textid" class="col-2 col-form-label">Id</label>
                    <div class="col-10">
                        <input class="form-control" type="text" value="{{user.id}}" id="textid" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="textName" class="col-2 col-form-label">Name</label>
                    <div class="col-10">
                        <input class="form-control" type="text" value="{{user.name}}" id="textName" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="textEmail" class="col-2 col-form-label">Email</label>
                    <div class="col-10">
                        <input class="form-control" type="text" value="{{user.email}}" id="textEmail" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="textRole" class="col-2 col-form-label">Role</label>
                    <div class="col-10">
                        <input class="form-control" type="text" value="{{user.role}}" id="textRole" disabled>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-10">
                        <a href="/userSearcher" class="btn btn-default">Go Searcher</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        {{/if}}
    {{/if}}
</div>