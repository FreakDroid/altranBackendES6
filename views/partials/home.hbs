{{! Import the contents of header.html from partials}}
{{> navigation}}

<div class="container">
    {{#if error}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
             <div class="form-group row">
                <div class="col-10">
                    <div class="alert alert-danger">{{error}}</div>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-10">
                    <a href="/userSearcher" class="btn btn-default">Go Searcher</a>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    {{else}}
        {{#if user}}
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row">
                    <div class="col-10">
                        <p>You are logged as <b>{{user.name}}</b></p>
                        <p>Your role is <b>{{user.role}}</b></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4"></div>
        </div>
        {{/if}}
    {{/if}}
</div>